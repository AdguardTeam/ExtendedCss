{
  "name": "extended-css",
  "version": "2.0.0",
  "description": "Module for applying CSS styles with extended selection properties.",
  "main": "dist/extended-css.cjs.js",
  "module": "dist/extended-css.esm.js",
  "types": "dist/extended-css.d.ts",
  "directories": {
    "test": "test"
  },
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "rollup -c rollup.config.ts",
    "build:playwright-selector-test": "rollup -c rollup.config.ts --environment TEST_SELECTOR_PLAYWRIGHT",
    "build:browserstack-test": "rollup -c rollup.config.ts --environment TEST_BROWSERSTACK",
    "test": "yarn build:playwright-selector-test && jest --silent",
    "browserstack": "yarn build:browserstack-test && ts-node test/browserstack/index.ts",
    "increment": "yarn version --patch --no-git-tag-version",
    "lint": "eslint .",
    "lint-staged": "lint-staged",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.ts": [
      "eslint"
    ]
  },
  "author": "AdGuard",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AdguardTeam/ExtendedCss.git"
  },
  "bugs": {
    "url": "https://github.com/AdguardTeam/ExtendedCss/issues"
  },
  "homepage": "https://github.com/AdguardTeam/ExtendedCss#homepage",
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@babel/plugin-transform-runtime": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@types/jest": "^28.1.6",
    "@types/qunit": "^2.19.2",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "browserstack-runner": "^0.9.4",
    "dotenv": "^16.0.1",
    "eslint": "^8.21.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "fs-extra": "^10.1.0",
    "husky": "^8.0.0",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "lint-staged": "^13.0.3",
    "playwright": "1.24.2",
    "qunit": "2.10.0",
    "rollup": "^2.77.2",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-generate-html": "^0.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {}
}
